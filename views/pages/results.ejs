<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="">
    <link rel="stylesheet" href="styles/base.css">
    <link rel="stylesheet" href="styles/modules.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="styles/bounce.css">

    <title>Picky Eater</title>

</head>


<body>
    <%- include('header') %>

                <div class="inner cover">
                    <div class='results-container'>
                        <% searchResults.forEach((food, i) => { %>
                        <section class="results">
                            <ul>
                                <li><h2><%= food.food_name %> </h2></li>
                                <li class='description'><%= food.food_description %></li>
                                <li><canvas id="chart-<%- i %>" width="50" height="50"data-info="<%- food.food_description %> "></canvas></li>
                            </ul>
                        </section>
                        <% }) %>
                    </div>
                    <form action='/results' method="POST">

                        <input id='search' type="text" name="expression" value=""
                            placeholder="search for any food item">
                        <button id="hidden_button" type='submit'>BUTTON</button>
                    </form>
                </div>

                <div class="mastfoot">
                    <div class="inner">
                    </div>
                </div>

            </div>

        </div>

    </div>

    <footer>
        <%- include('footer') %>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="js/app.js"></script>
</body>