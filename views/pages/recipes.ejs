<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="">
    <link rel="stylesheet" href="styles/recipe-base.css">
    <link rel="stylesheet" href="styles/bounce.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
    <title>Picky Eater</title>
</head>
<body>
    <div class="site-wrapper">
        <div class="site-wrapper-inner">
            <div class="container">
                <div class="masthead-clearfix">
                    <div class="inner">
                        <h3 class="masthead-brand"><a href="/">Picky Eater</a></h3>
                        
                        <nav>
                            <ul class="nav masthead-nav">
                                <!-- add file paths -->
                                <li class="active"><a href="/">Home</a></li>
                                <li><a href="/cooking">Recipes</a></li>
                                <li><a href="/saved-recipe">Saved Recipes</a></li>
                                <li><a href="/about">About Us</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="inner cover">
                    <h1 class="cover-heading">Recipe Results</h1>
                    <img src="" alt=""> 

                    <br>
                    <form action='/recipes' method="POST">
                        <input id='search' type="text" name="expression" value="" placeholder="search for any food item">
                        <button id="hidden_button" type='submit'>BUTTON</button>
                    </form>
                </div>
                <div class="inner cover">
                    <div class='recipe-container'>
                        <!-- needs a form to get the query data -->
                      <% recipeResults.forEach(recipe => { %>  
                         <Section class="recipes">

                             <img id="recipe-image" src="images/picky-eater-placeholder.jpg">

                             <img id="recipe-image"src="<%= recipe.recipe_image %>">
                             <h2 id="recipe-name"><%= recipe.recipe_name %> </h2>
                             <p id="recipe-des"><%= recipe.recipe_description %></p>
                             <button id="recipebutton"><a href="<%= recipe.recipe_url %>">Recipe Link</a></button>
                             <button class="recipesave" type="submit" data-url="<%= recipe.recipe_url %>" data-name="<%= recipe.recipe_name %>">Save Recipe</button>
                         </Section>
                    <% }) %>
                 </div>
                <div class="mastfoot">
                    <div class="inner">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="js/app.js"></script>
</body>
</html>